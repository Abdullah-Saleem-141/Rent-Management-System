<%- include('partials/header', { title: `Payments for ${user.name}` }) %>
<%- include('partials/messages') %>

<div class="content-section">
    <h2>Payment History for <%= user.name %></h2>
    <p><strong>Fixed Fare:</strong> <%= user.fixedFare %></p>
    <p><strong>Total Paid:</strong> <%= totalPaid %></p>
    <hr>
    <% if (payments.length > 0) { %>
        <ul class="user-list">
            <% payments.forEach(payment => { %>
                <li>
                    <span>Amount: <%= payment.amount %> - Date: <%= payment.date.toDateString() %></span>
                   <form action="/delete-payment/<%= payment._id %>" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this payment record?');">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No payments found for this user.</p>
    <% } %>
</div>

<%- include('partials/footer') %>