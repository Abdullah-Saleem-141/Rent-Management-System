<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header class="app-header">
        <h1>Rent Management System</h1>
    </header>
    <div class="dashboard-container">
        <div class="payment-section">
            <h2>Record a Payment</h2>
            <form action="/save-payment" method="post">
                <label for="userId">Select User:</label>
                <select name="userId" id="userId" required>
                    <% if (typeof users !== 'undefined') { %>
                        <% users.forEach(user => { %>
                            <option value="<%= user._id %>"><%= user.name %> - <%= user.location %></option>
                        <% }); %>
                    <% } %>
                </select>
                <br><br>
                <label for="amount">Amount:</label>
                <input type="number" name="amount" id="amount" required>
                <br><br>
                <button type="submit">Save Payment</button>
            </form>
        </div>
        
        <div class="nav-links">
            <a href="/add-user" class="nav-link">Add New User</a>
            <a href="/users" class="nav-link">View All Users</a>
            <a href="/reports" class="nav-link">View Monthly Reports</a>
        </div>
    </div>
</body>
</html>